# Stop if something fails.
set -e

mkdir classes
${JAVAC} -d classes `find src -name '*.java'`

if [ -r src2 ]; then
    ${JAVAC} -d classes `find src2 -name '*.java'`
fi


if [ -r src-ex ]; then
    mkdir classes-ex
    ${JAVAC} -d classes-ex -cp classes `find src-ex -name '*.java'`
fi
